<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
                              
  <bean id="database" class="com.ycframe.database.Manager" init-method="load">
    <property name="cacheMaxInactiveInterval" value="30" />
    <property name="sqlScriptFile" value="sqlscript.xml"/> 
    <constructor-arg value="datasource"/>  
     <constructor-arg value="sqlscript.xml"/>   
  </bean>
</beans>  